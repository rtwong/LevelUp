<Window x:Class="LevelUp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LevelUp"
        mc:Ignorable="d"
        Title="LevelUp" Height="800" Width="550">


    <Grid HorizontalAlignment="Left" Height="593" Margin="0,10,0,0" VerticalAlignment="Top" Width="667">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="24*"/>
        </Grid.ColumnDefinitions>
        <WrapPanel x:Name="skillContainer" HorizontalAlignment="Left" Height="595" Margin="10,0,0,-2" VerticalAlignment="Top" Width="647" Grid.ColumnSpan="2"/>
        <Button x:Name="addSkillButton" Content="+" Grid.Column="1" HorizontalAlignment="Left" Margin="395,600,0,-61" VerticalAlignment="Top" Width="74" Height="54" Click="addSkillButtonClick" RenderTransformOrigin="-0.432,0.565"/>
        <Button x:Name="editButton" Content="Edit" Grid.Column="1" HorizontalAlignment="Left" Height="59" Margin="10,595,0,-61" VerticalAlignment="Top" Width="177" Click="editButtonClick"/>
    </Grid>
</Window>
